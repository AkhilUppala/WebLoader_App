<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<RelativeLayout
    android:id="@+id/activity_index"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rs.swamivivekanadabook.IndexActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INDEX HEADING"
        android:textSize="30sp"
        android:id="@+id/main_title"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First Item"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/main_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Item_1"
        android:textAlignment="center"
        android:textSize="20sp"
        android:onClick="ac2"
        android:clickable="true"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Second Item"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/Item_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Item_2"
        android:textAlignment="center"
        android:textSize="20sp"
        android:onClick="ac2"
        android:clickable="true"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Third Item"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/Item_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Item_3"
        android:textAlignment="center"
        android:textSize="20sp"
        android:onClick="ac2"
        android:clickable="true"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fourth Item"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/Item_3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Item_4"
        android:textAlignment="center"
        android:textSize="20sp"
        android:onClick="ac2"
        android:clickable="true"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fifth Item"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/Item_4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Item_5"
        android:textAlignment="center"
        android:textSize="20sp"
        android:onClick="ac2"
        android:clickable="true"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sixth Item"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/Item_5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Item_6"
        android:textAlignment="center"
        android:textSize="20sp"
        android:onClick="ac2"
        android:clickable="true"
        android:padding="10dp"/>


</RelativeLayout>

</ScrollView>
